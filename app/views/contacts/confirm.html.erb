<div class="contact">
	<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-12">

		<% provide(:title, 'お問い合わせ') %>
		<h1>お問い合わせ</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
			<%= form_for @contact, :url => contacts_thanks_path do |f| %>

				<div class="form-group">
					<%= f.label :name %>
					<%= f.hidden_field :name%>
					<%= simple_format(@contact.name) %>
				</div>

				<div class="form-group">
					<%= f.label :email %>
					<%= f.hidden_field :email%>
					<%= simple_format(@contact.email) %>
				</div>

				<div class="form-group">
					<%= f.label :message %>
					<%= f.hidden_field :message%>
					<%= simple_format(@contact.message) %>
				</div>

				<%= f.submit '確認', class: 'btn btn-primary pull-right' %>
			<% end %>
		</div>
	</div>
	</div>
</div>